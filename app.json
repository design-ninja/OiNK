{
  "expo": {
    "name": "OiNK",
    "slug": "OiNK",
    "version": "1.0.0",
    "description": "OiNK is a tamagotchi-style game about a pig that needs to be taken care of.",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "oink",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#FF649B"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.lirik.OiNK",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "UIBackgroundModes": ["audio"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#FF649B"
      },
      "package": "com.lirik.OiNK",
      "versionCode": 1,
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "plugins": ["expo-av"],
    "extra": {
      "eas": {
        "projectId": "e318bd79-042b-46a1-b006-7c1bd61dcd85"
      }
    },
    "owner": "limebridge"
  }
}
